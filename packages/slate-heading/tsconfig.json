{
  "compilerOptions": {
    "target": "ES6", // Specify the ECMAScript target version
    "module": "ES6", // Specify the module system
    "outDir": "./dist", // Specify the output directory for compiled files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "resolveJsonModule": true, // Enable importing JSON files as modules
    "declaration": true, // Generate declaration files (.d.ts)
    // "declarationDir": "./types" // Specify the output directory for declaration files
    "moduleResolution": "node", // Specify module resolution strategy
    "jsx": "preserve", // Specify JSX code generation
    "skipLibCheck": true // Skip type checking of all declaration files (*.d.ts)
  },
  "include": ["src"], // Specify the source files to be included in the compilation
  "exclude": ["node_modules"] // Specify the files to be excluded from the compilation
}

