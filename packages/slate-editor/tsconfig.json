{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "allowUnreachableCode": false,
    "jsx": "preserve",

  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
